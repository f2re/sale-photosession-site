# Platform Configuration (auto-generated by telegram-bots-platform)
ENVIRONMENT=production
DOMAIN=yourdomain.com
WEBHOOK_URL=https://yourdomain.com

# Port Configuration (auto-assigned by platform)
BACKEND_PORT=8000
FRONTEND_PORT=3000
PORT=8000

# Docker Logging
DOCKER_LOG_MAX_SIZE=10m
DOCKER_LOG_MAX_FILE=3

# Database Configuration (auto-generated by platform)
# The platform creates a PostgreSQL database and provides these credentials:
DATABASE_URL=postgresql+asyncpg://botname_user:password@172.25.0.1:5432/botname_db
POSTGRES_HOST=172.25.0.1
POSTGRES_PORT=5432
POSTGRES_DB=botname_db
POSTGRES_USER=botname_user
POSTGRES_PASSWORD=auto_generated_password

# Alternative database connection (if DATABASE_URL not used)
DB_HOST=${POSTGRES_HOST}
DB_PORT=${POSTGRES_PORT}
DB_NAME=${POSTGRES_DB}
DB_USER=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token
TELEGRAM_BOT_TOKEN=${BOT_TOKEN}
BOT_USERNAME=your_bot_username
BOT_NAME=PhotoSession Bot
TELEGRAM_BOT_ID=your_bot_id
ADMIN_IDS=123456789,987654321

# API URLs (will use DOMAIN from platform)
API_URL=https://${DOMAIN}
SITE_URL=https://${DOMAIN}

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Telegram Auth
VERIFICATION_CODE_EXPIRE_MINUTES=5

# OpenRouter API
OPENROUTER_API_KEY=your_openrouter_api_key
PROMPT_MODEL=anthropic/claude-3.5-sonnet
IMAGE_MODEL=google/gemini-2.0-flash-001

# YooKassa Payments
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
YOOKASSA_RETURN_URL=https://${DOMAIN}/payment/success

# Packages Configuration
PACKAGE_1_NAME=Стартовый
PACKAGE_1_PHOTOSHOOTS=3
PACKAGE_1_PRICE=299

PACKAGE_2_NAME=Бизнес
PACKAGE_2_PHOTOSHOOTS=10
PACKAGE_2_PRICE=799

PACKAGE_3_NAME=Профессиональный
PACKAGE_3_PHOTOSHOOTS=30
PACKAGE_3_PRICE=1999

PACKAGE_4_NAME=Безлимитный
PACKAGE_4_PHOTOSHOOTS=100
PACKAGE_4_PRICE=4999

# Settings
FREE_PHOTOSHOOTS_COUNT=2
PHOTOS_PER_PHOTOSHOOT=4
MAX_SAVED_STYLES=4
LOG_LEVEL=INFO

# Yandex Metrika (optional)
YANDEX_METRIKA_COUNTER_ID=
YANDEX_METRIKA_TOKEN=
METRIKA_GOAL_START=start_bot
METRIKA_GOAL_FIRST_PHOTOSHOOT=first_photoshoot
METRIKA_GOAL_PURCHASE=purchase
METRIKA_UPLOAD_INTERVAL=3600

# Referral Program
REFERRAL_REWARD_START=1
REFERRAL_REWARD_PURCHASE_PERCENT=10

# CORS Origins (comma-separated)
CORS_ORIGINS=https://${DOMAIN},http://localhost:3000,http://localhost:5173

# Redis (optional, auto-configured by platform if needed)
REDIS_URL=redis://localhost:6379/0
